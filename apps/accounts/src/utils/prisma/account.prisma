datasource db {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "./types"
}

model User {
  userId       String     @id @default(uuid()) @map("user_id") @db.Uuid
  nikName      String     @unique @map("nik_name")
  usetAuth     UsetAuth[]
  registerDate DateTime   @default(now()) @map("register_date")

  @@map("user")
}

enum UsetAuthType {
  LOCAL
  GOOGLE
  APPLE
}

model UsetAuth {
  userAuthId String       @id @default(uuid()) @map("user_auth_id") @db.Uuid
  userId     String       @map("user_id") @db.Uuid
  secretKey  String       @map("secret_key")
  publickey  String       @map("public_key")
  type       UsetAuthType
  user       User         @relation(fields: [userId], references: [userId])

  @@map("user_auth")
}
